<div class="page-header">
  <h1><%= t(:items) %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(:reference) %></th>
      <th><%= t(:title) %></th>
      <th><%= t(:price) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.ref %></td>
        <td><%= link_to item.title, item_path(item) %></td>
        <td><%= item.price %></td>
        <td>
          <%= link_to t(:add_to_cart), add_to_cart_item_path(item), method: 'post', class: 'btn btn-mini btn-success' %>
          <%= link_to t(:edit_), edit_item_path(item), class: 'btn btn-mini' %>
          <%= link_to t(:destroy_), item_path(item), method: :delete, data: { confirm: t(:confirm) }, class: 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('item.new'), new_item_path, class: 'btn btn-primary' %>
